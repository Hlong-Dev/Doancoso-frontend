<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <style>
        /* Đặt nền toàn màn hình */
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-image: url("https://i.imgur.com/myaai3x.jpeg");
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }


        /* Container cho form đăng nhập ở giữa */
        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-grow: 1;
        }

        .containerr {
            background-color: rgba(0, 0, 0, 0.8); /* Màu nền đen mờ */
            width: 100%;
            padding-right: var(--bs-gutter-x, 0.75rem);
            padding-left: var(--bs-gutter-x, 0.75rem);
            margin-right: auto;
            margin-left: auto;
            max-width: 540px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .containerr {
            background-color: rgba(0, 0, 0, 0.8); /* Màu nền đen mờ */
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
            max-width: 400px;
            width: 100%;
            color: white;
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
                color: #ddd;
            }

            .form-group input {
                width: 100%;
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 3px;
                box-sizing: border-box;
            }

        .btn-primary {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: rgba(12, 47, 64, 0.9);
            
            border: none;
            border-radius: 3px;
            color: #fff;
            font-size: 16px;
            cursor: pointer;
            margin-top: 10px;
        }

            .btn-primary:hover {
                background-color: rgba(12, 47, 64, 0.9);
            }

        #signInMessage {
            margin-top: 20px;
            color: red;
        }

        p {
            margin-top: 20px;
            color: #ddd;
        }

            p a {
                color: #007bff;
                text-decoration: none;
            }

                p a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>

    <div class="login-container">
        <div class="containerr">
            <h1>Đăng Nhập</h1>

            <form id="signInForm">
                <div class="form-group">
                    <label for="inputEmail">Địa Chỉ Email</label>
                    <input type="email" id="inputEmail" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="inputPassword">Mật Khẩu</label>
                    <input type="password" id="inputPassword" placeholder="Password">
                </div>
                <button type="submit" class="btn-primary">Đăng Nhập</button>
            </form>

            <div id="signInMessage"></div>

            <p>Bạn Chưa Có Tài Khoản? <a href="http://localhost:5236/account/signup">Đăng Kí Ngay</a>.</p>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const signInForm = document.getElementById('signInForm');
            const signInMessage = document.getElementById('signInMessage');

            signInForm.addEventListener('submit', async function (event) {
                event.preventDefault();

                const email = document.getElementById('inputEmail').value;
                const password = document.getElementById('inputPassword').value;

                try {
                    const response = await fetch('http://localhost:5233/api/Accounts/SignIn', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            email: email,
                            password: password
                        })
                    });

                    if (response.ok) {
                        const data = await response.text();

                        const token = extractTokenFromCookie(data);
                        localStorage.setItem('token', token);

                        window.location.href = 'http://localhost:5236/';
                    } else {
                        const data = await response.json();
                        signInMessage.textContent = `Sign in failed: ${data}`;
                    }

                    function extractTokenFromCookie(cookieString) {
                        const tokenStartIndex = cookieString.indexOf('=') + 1;
                        const tokenEndIndex = cookieString.indexOf(';');
                        if (tokenEndIndex === -1) {
                            return cookieString.slice(tokenStartIndex);
                        } else {
                            return cookieString.slice(tokenStartIndex, tokenEndIndex);
                        }
                    }

                    function parseJwt(token) {
                        try {
                            return JSON.parse(atob(token.split('.')[1]));
                        } catch (error) {
                            return null;
                        }
                    }

                } catch (error) {
                    console.error('Error signing in:', error);
                    signInMessage.textContent = 'Error signing in. Please try again later.';
                }
            });
        });
    </script>
 

</body>
</html>
